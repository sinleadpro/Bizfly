{
  "manifest_version": 2,

  "name": "Bizfly",
  "description": "A Chrome extension for cyberbiz developers.",
  "version": "0.1",

  "browser_action": {
    "default_icon": "public/icon128.png",
    "default_popup": "public/popup.html"
  },

  "icons": {
    "16": "public/icon16.png",
    "48": "public/icon48.png",
    "128": "public/icon128.png"
  },

  "content_scripts": [
    {
      "matches": [
        "http://*.cyberbiz.co.local/*",
        "http://*.cyberbiz.v3.local/*",
        "http://*.testcyb.info/*",
        "http://*.cyberbiz.co/*",
        "http://*.lvh.me:*/*",
        "https://*.cyberbiz.co.local/*",
        "https://*.cyberbiz.v3.local/*",
        "https://*.testcyb.info/*",
        "https://*.cyberbiz.co/*",
        "https://*.cyberbiz.tw/*",
        "https://*.com/*",
        "https://*.tw/*",
        "http://*.com/*",
        "http://*.tw/*"
      ],
      "js": ["vendor/jquery.min.js", "main.js"]
    }
  ],

  "permissions": [
    "activeTab"
  ]
}
